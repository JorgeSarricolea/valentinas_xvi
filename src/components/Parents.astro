---
import "../styles/parents.css";
import { animateWords, animateLetters } from "../utils/animations.js";

const parentsText = "Carlos y María Rodríguez";
const messageText =
  "Con gran alegría invitamos a celebrar los dulces dieciséis de nuestra hija";
---

<section class="parents-section section" id="parents">
  <div class="section-content scroll-animate" data-animation="fade-up">
    <h2 class="letter-container">
      <span class="letter-animate" style="transition-delay: 0.05s;">A</span>
      <span class="letter-animate" style="transition-delay: 0.1s;">N</span>
      <span class="letter-animate" style="transition-delay: 0.15s;">F</span>
      <span class="letter-animate" style="transition-delay: 0.2s;">I</span>
      <span class="letter-animate" style="transition-delay: 0.25s;">T</span>
      <span class="letter-animate" style="transition-delay: 0.3s;">R</span>
      <span class="letter-animate" style="transition-delay: 0.35s;">I</span>
      <span class="letter-animate" style="transition-delay: 0.4s;">O</span>
      <span class="letter-animate" style="transition-delay: 0.45s;">N</span>
      <span class="letter-animate" style="transition-delay: 0.5s;">E</span>
      <span class="letter-animate" style="transition-delay: 0.55s;">S</span>
    </h2>

    <div class="parents-details">
      <p
        class="message word-container"
        set:html={animateWords(messageText, 0.2)}
      />
      <p
        class="names word-container"
        set:html={animateWords(parentsText, 0.5)}
      />
    </div>

    <div class="divider scroll-animate" data-animation="fade-up"></div>

    <div class="rsvp-container scroll-animate" data-animation="fade-up">
      <p class="rsvp-text">Confirma tu asistencia</p>
      <div class="contact-info">
        <p>
          <a
            href="https://wa.me/1234567890"
            target="_blank"
            rel="noopener noreferrer"
            class="whatsapp-link"
          >
            <svg
              class="whatsapp-icon"
              viewBox="0 0 24 24"
              width="16"
              height="16"
            >
              <path
                fill="currentColor"
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
              ></path>
            </svg>
            Tel: (123) 456-7890
          </a>
        </p>
        <p>
          <a href="mailto:rsvp@valentina16.com" class="email-link">
            <svg class="email-icon" viewBox="0 0 24 24" width="16" height="16">
              <path
                fill="currentColor"
                d="M20,4H4C2.9,4,2,4.9,2,6v12c0,1.1,0.9,2,2,2h16c1.1,0,2-0.9,2-2V6C22,4.9,21.1,4,20,4z M20,8l-8,5L4,8V6l8,5l8-5V8z"
