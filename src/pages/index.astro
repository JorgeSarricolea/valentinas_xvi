---
import Hero from "../components/Hero.astro";
import Parents from "../components/Parents.astro";
import Location from "../components/Location.astro";
import CountdownTimer from "../components/CountdownTimer.astro";
import GiftSuggestion from "../components/GiftSuggestion.astro";
import DressCode from "../components/DressCode.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Valentina's Sweet 16">
  <main>
    <Hero />
    <Parents />
    <Location />
    <CountdownTimer />
    <DressCode />
    <GiftSuggestion />
    <div class="powered-by">
      <a
        href="https://jorgesarricolea.com"
        target="_blank"
        rel="noopener noreferrer"
        >Desarrollado por <span>Jorge Sarricolea</span></a
      >
    </div>
  </main>
</Layout>

<script>
  import { initScrollAnimations } from "../utils/animations.js";

  // Initialize animations when the DOM is loaded
  document.addEventListener("DOMContentLoaded", function () {
    // Small delay to ensure all elements are properly rendered
    setTimeout(() => {
      initScrollAnimations();
    }, 100);
  });
</script>
